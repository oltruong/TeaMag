<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             version="1.0">

    <persistence-unit name="testPersistence" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!--<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
        <class>fr.oltruong.teamag.entity.Absence</class>
        <class>fr.oltruong.teamag.entity.AbsenceDay</class>
        <class>fr.oltruong.teamag.entity.Activity</class>
        <class>fr.oltruong.teamag.entity.BusinessCase</class>
        <class>fr.oltruong.teamag.entity.Member</class>
        <class>fr.oltruong.teamag.entity.Parameter</class>
        <class>fr.oltruong.teamag.entity.Task</class>
        <class>fr.oltruong.teamag.entity.WeekComment</class>
        <class>fr.oltruong.teamag.entity.Work</class>
        <class>fr.oltruong.teamag.entity.WorkLoad</class>
        <class>fr.oltruong.teamag.entity.converter.DateConverter</class>

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/test"/>
            <property name="javax.persistence.logging.level" value="INFO"/>
        </properties>
    </persistence-unit>


    <persistence-unit name="ejbPU" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>jdbc/__default</jta-data-source>
        <class>fr.oltruong.teamag.entity.Absence</class>
        <class>fr.oltruong.teamag.entity.Activity</class>
        <class>fr.oltruong.teamag.entity.BusinessCase</class>
        <class>fr.oltruong.teamag.entity.Member</class>
        <class>fr.oltruong.teamag.entity.Parameter</class>
        <class>fr.oltruong.teamag.entity.Task</class>
        <class>fr.oltruong.teamag.entity.Work</class>

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create-tables"/>
            <property name="javax.persistence.logging.level" value="INFO"/>
        </properties>
    </persistence-unit>

</persistence>        